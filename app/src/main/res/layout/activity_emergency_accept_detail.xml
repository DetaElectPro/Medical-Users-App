                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/available"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
